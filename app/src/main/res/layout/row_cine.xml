<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="0dp"
        android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_weight="0.7">
        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:text="CINE CENTER" />

        <TextView
            android:id="@+id/txt_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Cine familiar de entreteniemiento " />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:text="Horario:" />


            <TextView
                android:id="@+id/txt_horario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="6:00 - 12:00 LU-DO"
                android:layout_marginRight="16dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_name"
                tools:layout_editor_absoluteX="83dp" />


            <ImageView
                android:id="@+id/img_ubicacion"
                android:layout_width="18dp"
                android:layout_height="19dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_place_red_400_24dp"
                tools:layout_editor_absoluteX="165dp" />

        </LinearLayout>

</LinearLayout>


        <ImageView
            android:id="@+id/img_cine"
            android:layout_width="80dp"
            android:layout_height="80dp"
        android:layout_weight="0.3"

            app:srcCompat="@mipmap/cinecenter" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>